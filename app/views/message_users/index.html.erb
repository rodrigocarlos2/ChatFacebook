
<p id="notice"><%= notice %></p>

<h1>Message Users</h1>

<table>
  <thead>
    <tr>
      <th>Message Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @message_users.each do |message_user| %>
      <tr>
        <td><%= message_user.message.content %></td>
        <td><%= message_user.user.name %></td>
        <td><%= link_to 'Show', message_user %></td>
        <td><%= link_to 'Edit', edit_message_user_path(message_user) %></td>
        <td><%= link_to 'Destroy', message_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message User', new_message_user_path %>
